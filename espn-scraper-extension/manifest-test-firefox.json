{
  "manifest_version": 2,
  "name": "Pachanga ESPN Scraper Test",
  "version": "1.0.0",
  "description": "Test version for Firefox",
  
  "applications": {
    "gecko": {
      "id": "pachanga-test@localhost"
    }
  },
  
  "permissions": [
    "activeTab",
    "storage",
    "*://www.espn.com/*"
  ],
  
  "background": {
    "scripts": ["background-firefox.js"],
    "persistent": true
  },
  
  "browser_action": {
    "default_popup": "popup-firefox.html",
    "default_title": "Test ESPN Scraper"
  },
  
  "content_scripts": [
    {
      "matches": ["*://www.espn.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}