{
  "manifest_version": 2,
  "name": "Pachanga ESPN Scraper",
  "version": "1.0.0",
  "description": "ESPN Data Scraper for Firefox",
  
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "alarms",
    "notifications",
    "*://www.espn.com/*",
    "*://sportsbook.espn.com/*"
  ],
  
  "background": {
    "scripts": ["background-firefox.js"],
    "persistent": false
  },
  
  "content_scripts": [
    {
      "matches": [
        "*://www.espn.com/nfl/stats/*",
        "*://www.espn.com/nfl/injuries/*",
        "*://sportsbook.espn.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  
  "browser_action": {
    "default_popup": "popup-firefox.html",
    "default_title": "ESPN Scraper"
  },
  
  "web_accessible_resources": [
    "content.js"
  ]
}