{
  "manifest_version": 2,
  "name": "Pachanga's ESPN Data Scraper (Firefox)",
  "version": "1.0.0",
  "description": "Scrape NFL data from ESPN for Pachanga's Picks app - Firefox Edition",
  
  "applications": {
    "gecko": {
      "id": "pachanga-espn-scraper@localhost",
      "strict_min_version": "70.0"
    }
  },
  
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "alarms",
    "tabs",
    "*://www.espn.com/*",
    "*://sportsbook.espn.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "*://www.espn.com/nfl/stats/team*",
        "*://www.espn.com/nfl/injuries*",
        "*://www.espn.com/nfl/scoreboard*",
        "*://www.espn.com/nfl/standings*",
        "*://www.espn.com/nfl/odds*",
        "*://www.espn.com/nfl/qbr*",
        "*://www.espn.com/nfl/fpi*",
        "*://www.espn.com/nfl/story/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "background": {
    "scripts": ["background-firefox.js"],
    "persistent": true
  },
  
  "browser_action": {
    "default_popup": "popup-firefox.html",
    "default_title": "ESPN Data Scraper (Firefox)"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": ["content.js"]
}